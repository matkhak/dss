<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:l="sap.ui.layout"
        xmlns:core="sap.ui.core"
>
    <l:VerticalLayout
            class="mainpage__indlist"
            width="100%"
    >
        <Toolbar design="Transparent">
            <SearchField showSearchButton="false"/>
        </Toolbar>
        <ScrollContainer
                class="gIndsScrollContainer"
                horizontal="false"
                vertical="true"
        >
            <List
                    id="confList"
                    noDataText="Нет сохраненных конфигураций"
                    mode="SingleSelectMaster"
                    includeItemInSelection="true"
                    rememberSelections="false"
                    select="handleConfigSelection"
                    items="{gSettings>/configs}"
            >
                <items>
                    <StandardListItem
                            title="{gSettings>name}"
                            description="id: {gSettings>id}"
                    />
                </items>
            </List>
        </ScrollContainer>
    </l:VerticalLayout>
</core:FragmentDefinition>
