<?xml version="1.0" encoding="UTF-8" ?>
<core:View
    controllerName="tepaup.modules.table.controller.Table"
    xmlns="sap.suite.ui.commons"
    xmlns:custom="tepaup.controls"

    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:core="sap.ui.core"
>
  <custom:ExtendedChartContainer
      id="chartContainer2"
      showPersonalization="false"
      showIndButton="false"
      showSettingsButton="true"
      showStyleButton="false"
      showLegend="false"
      showFullScreen="true"
      autoAdjustHeight="false"
      showExcelButton="false"
      bottomHeight="-18"
      bAverage="false"
      onSwitchChart="updateTableMasterData"
  >
    <custom:dimensionSelectors>

      <m:Select
          id="idTableDimensionSelector"
          items="{gSettings>/table/tabs}"
          visible="false"
      >
        <core:Item
            key="{gSettings>key}"
            text="{gSettings>label}"
        />
      </m:Select>
    </custom:dimensionSelectors>

    <custom:toolbarButtons>
      <m:Button
          press="showExcelDialog"
          icon="sap-icon://excel-attachment"
          tooltip="Выгрузить в Excel"
          type="Accept"
      />
      <m:Button
          press="showCompareDialog"
          icon="sap-icon://add-activity-2"
          tooltip="Выбор показателя для сравнения"
          type="Transparent"
      />
      <m:Button
          press="showColumnsDialog"
          icon="sap-icon://settings"
          tooltip="Настройка колонок таблицы"
          type="Transparent"
      />
    </custom:toolbarButtons>

  </custom:ExtendedChartContainer>
</core:View>
