<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
>
  <Dialog title="Детали документа" >
    <!-- <customHeader>
      <Bar>
        <contentLeft>
          <Text text="Детали документа" />
        </contentLeft>
        <contentRight>
          <Button icon="sap-icon://refresh" text="" tooltip="Сбросить значения" press="handleFilterDialogReset" />
        </contentRight>
      </Bar>
    </customHeader> -->
    <content>

      <List
          width="100%"
          items="{gSettings>/table/fields}"
      >
        <items>
            <StandardListItem
                title="{
                    parts: [
                        'tableMasterData>',
                        'gSettings>field'
                    ],
                    formatter: 'zcust.lib.formatters.table'
                }"
                description="{gSettings>label}"
            />

            <StandardListItem title="{tableMasterData>IND_ID}" description="Код проекта" />
            <StandardListItem title="{tableMasterData>IND_NAME}" description="Наименование проекта" />
            <StandardListItem title="{tableMasterData>INFO_SYSTEM}" description="Портфель проектов (код)" />
            <StandardListItem title="{tableMasterData>PERS_AREA}" description="Портфель проектов (наименование)" />
            <StandardListItem title="{tableMasterData>task}" description="Ответственный (логин)" />
            <StandardListItem title="{tableMasterData>FUNC_GROUP}" description="Ответственный (ФИО)" />
            <StandardListItem title="{tableMasterData>region}" description="Орг.единица (код)" />
            <StandardListItem title="{tableMasterData>GROUP}" description="Орг.единица (наименование)" />
            <StandardListItem title="{tableMasterData>PERIOD}" description="Исполнитель проекта (код)" />
        </items>
      </List>

    </content>
    <!-- <beginButton>
      <Button text="{i18n>OK}" press="handleFilterDialogApply" />
    </beginButton> -->
    <endButton>
      <Button text="Закрыть" press="handleTableDialogClose" />
    </endButton>
  </Dialog>
</core:FragmentDefinition>
