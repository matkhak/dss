<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"  >
  <Dialog
      title="Выбрать колонки для отображения"
      class="sapUiPopupWithPadding columnsDialog"
  >
    <content>

      <!-- Available table columns -->
      <List
          items="{gSettings>/table/dialogColumns}"
          mode="None"  >
        <items>
          <CustomListItem
              visible="{
                path: 'gSettings>textFields',
                formatter: 'zcust.lib.formatters.selectDialogTabColVis'
              }"
          >
            <Label
                class="sapUiSmallMargin"
                text="{gSettings>label}"
            />
            <CheckBox
              class="floatRight"
              text="Текст"
              selected="{gSettings>textSelected}"
              visible="{
                path: 'gSettings>textFields',
                formatter: 'zcust.lib.formatters.hasLength'
              }"/>
            <CheckBox
              class="floatRight"
              text="Код"
              selected="{gSettings>codeSelected}"
              visible="{
                path: 'gSettings>codeFields',
                formatter: 'zcust.lib.formatters.hasLength'
              }"/>
          </CustomListItem>
        </items>
      </List>

    </content>

    <beginButton>
      <Button text="Применить" press="handleColumnsDialogApply" />
    </beginButton>
    <endButton>
      <Button text="Закрыть" press="handleColumnsDialogClose" />
    </endButton>

  </Dialog>
</core:FragmentDefinition>
