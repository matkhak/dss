<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="dialogSystemApps" afterClose="onClose" title="Системные приложения">
        <TileContainer id="container" editable="false" allowAdd="false" width="900px" height="600px">
            <StandardTile
                id="tileGlobalParam"
                icon="sap-icon://globe"
                title="Глобальные параметры"
                tooltip="Ведение глобальных параметров репозитория"
                press="onGlobalparamPress"/>
            <StandardTile
                id="tileDictEditor"
                icon="sap-icon://add-coursebook"
                title="Справочники"
                tooltip="Ведение локальных справочников репозитория"
                press="onDictEditorPress"/>
            <StandardTile
                id="tileDependViewer"
                icon="sap-icon://org-chart"
                title="Зависимости объектов"
                tooltip="Просмотр и выгрузка дерева технических объектов"
                press="onDependViewerPress"/>
            <StandardTile
                id="tileRoleViewer"
                icon="sap-icon://role"
                title="Роли объектов"
                tooltip="Роли и привелегии"
                press="onRoleViewerPress"/>
            <StandardTile
                id="tileObjectViewer"
                icon="sap-icon://display"
                title="Просмотр объектов"
                tooltip="Просмотр содержимого полей объектов"
                press="onObjectViewerPress"/>
            <StandardTile
                id="tileLoLinker"
                icon="sap-icon://chain-link"
                title="Просмотр связей ЛО"
                tooltip="Просмотр связей ЛО"
                press="onLoLinkerPress"/>
        </TileContainer>
        <beginButton>
            <Button text="Закрыть" press="onCloseDialogSystemApps"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
