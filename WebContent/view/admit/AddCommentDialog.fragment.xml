<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">

    <Dialog title="Введите комментарий к операции" busyIndicatorDelay="0" class="sapUiContentPadding" contentWidth="50%">
        <content>
            <VBox>
                <Label text="Комментарий" labelFor="textComment" required="true"/>
                <TextArea id="textComment" placeholder="Введите Комментарий ..." width="100%" rows="5" liveChange="resetValueState"/>
            </VBox>
        </content>
        <buttons>
            <Button text="Добавить" type="Accept" press="onAddCommentDialogSave"/>
            <Button text="Закрыть" press="onAddCommentDialogClose"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
