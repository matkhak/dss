<core:View class="mainPageView" controllerName="controller.init" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:fb="sap.ui.comp.filterbar" xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified">
  <u:Shell icon="{/logo}" id="myShell">
    <u:headItems>
      <u:ShellHeadItem icon="sap-icon://menu2" press="handlePressConfiguration" tooltip="Configuration"/>
      <u:ShellHeadItem icon="sap-icon://home" press="handlePressHome" tooltip="Home" visible="false"/>
    </u:headItems>
    <u:headEndItems>
      <u:ShellHeadItem icon="sap-icon://log" press="handleLogoffPress" tooltip="Logoff"/>
    </u:headEndItems>
    <u:user>
      <u:ShellHeadUserItem image="sap-icon://person-placeholder" press="handleUserItemPressed" username="Доможаков М."/>
    </u:user>
    <u:search>
      <SearchField search="handleSearchPressed"/>
    </u:search>
    <u:content>
      <Page class="tpMainPage" enableScrolling="false" id="tpMainPage" showFooter="true" showHeader="false">
        <content>
          <Page class="tpRootPage" enableScrolling="false" showFooter="false">
            <customHeader>
              <Bar>
                <contentRight>
                  <Button icon="sap-icon://arrow-right" iconFirst="false" id="navToDetailButton" press="navToDetail" text="Перейти к анализу"/>
                </contentRight>
                <contentLeft>
                  <Button icon="sap-icon://arrow-left" iconFirst="true" id="navToMainButton" press="navToMain" text="Перейти к выбору показателей" visible="false"/>
                </contentLeft>
              </Bar>
            </customHeader>
            <content>
              <NavContainer defaultTransitionName="show" height="100%" id="filterBarNavContainer">
                <pages>
                  <!--Expanded FilterBar-->
                  <Page height="100%" showFooter="false" showHeader="false">
                    <fb:FilterBar reset="onReset" search="onSearch" showClearButton="true" showRestoreButton="true">
                      <fb:filterItems>
                        <fb:FilterItem label="Группы показателей" name="A">
                          <fb:control>
                            <Select
					forceSelection="false"
					
					items="{group>/}">
					<core:Item key="{group>key}" text="{group>name}" />
				</Select>
                          </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem label="Государственные программы" name="B">
                          <fb:control>
                            <Select
					forceSelection="false"
					
					items="{program>/}">
					<core:Item key="{program>key}" text="{program>name}" />
				</Select>
                          </fb:control>
                        </fb:FilterItem>
                      </fb:filterItems>
                     </fb:FilterBar>
                   <l:BlockLayout >
                    
                    
                    	<l:BlockLayoutRow>
				<l:BlockLayoutCell 	width="1">
					<core:Fragment fragmentName="view.LeftTable" type="XML"/>


				</l:BlockLayoutCell>
				<l:BlockLayoutCell width="1">
					
									<core:Fragment fragmentName="view.RightTable" type="XML"/>
					
				</l:BlockLayoutCell>
				</l:BlockLayoutRow>
					</l:BlockLayout>
			
			
			
                  </Page>

                </pages>
              </NavContainer>

            </content>
          </Page>
        </content>
        <footer>
          <Bar>
            <contentLeft/>
            <contentMiddle>
              <Label text="Выбор показателей"/>
            </contentMiddle>
          </Bar>
        </footer>
      </Page>
    </u:content>
  </u:Shell>
</core:View>