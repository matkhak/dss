<!-- Диалоговое окно, которое позволяет сразу после создания карточки отправить её на согласование -->
<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog afterClose="_dialogAdmitAfterCreateClose" title="КАРТОЧКА СОХРАНЕНА" type="Message">
        <content>
            <VBox>
                <Text text="Отправить её на согласование?"/>
                <TextArea id="textAreaComment" visible="false" placeholder="Комментарий к заявке" liveChange="resetValueState"/>
            </VBox>
        </content>
        <buttons>
            <Button id="buttonYes" text="Да" type="Accept" press="_dialogAdmitAfterCreateYes" />
            <Button text="Нет" press="_dialogAdmitAfterCreateClose"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
