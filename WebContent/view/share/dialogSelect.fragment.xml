<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <SelectDialog
        class="sapUiPopupWithPadding"
        items="{list>/}"
        liveChange="_dialogSelectSearch"
        confirm="_dialogSelectConfirm"
        cancel="_dialogSelectCancel">
        <StandardListItem title="{list>sName}" description="{list>iId}" info="{list>iVersion}">
            <customData>
                <core:CustomData value="{list>myKey}"/>
            </customData>
        </StandardListItem>
    </SelectDialog>
</core:FragmentDefinition>
