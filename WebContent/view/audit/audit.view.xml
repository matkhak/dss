<mvc:View
    controllerName="controller.audit.audit"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:table="sap.ui.table"
	xmlns ="sap.m" >
	<SplitApp >
		<masterPages>
			<Page id="masterPageTypes" title="Отчеты">
				<content>
					<SearchField id="Master1Search" liveChange="onSearchList" width="100%"/>
					<List id="listTypes" items="{reports>/}" itemPress="onSelectReport">
						<ObjectListItem
                    title="{reports>name}"
                    type="Active"/>
					</List>
				</content>
			</Page>
		</masterPages>
		<detailPages>
			<Page id="detailPageEmpty" class="sapUiContentPadding">
				<headerContent>
					<Button
                    	icon="sap-icon://home"
                    	tooltip="Вернуться в стартовое меню Репозитрия"
                    	press="onReturnStartPage"
                   />
					<ToolbarSeparator/>
				</headerContent>
				<table:Table
                id="table"
                selectionMode="Single"
                selectionBehavior="RowOnly"
                rows="{reportData>/}"
                visibleRowCountMode="Auto"
                showNoData="false"
                busyIndicatorDelay="0"
                filter="filterPrice">


               		<table:columns>
						<table:Column sortProperty="sAuthor" filterProperty="sAuthor">
							<Label text="Автор"/>
							<table:template>
								<Text text="{reportData>sAuthor}"/>
							</table:template>
						</table:Column>
					
						<table:Column sortProperty="sDate" filterProperty="sDate">
							<Label text="Дата"/>
							<table:template>
								<Text text="{reportData>sDate}"/>
							</table:template>
						</table:Column>
					
						<table:Column sortProperty="sNameCard" filterProperty="sNameCard">
							<Label text="Бизнес-объект"/>
							<table:template>
								<Text text="{reportData>sNameCard}"/>
							</table:template>
						</table:Column>
					
						<table:Column sortProperty="iCard" filterProperty="iCard">
							<Label text="ID"/>
							<table:template>
								<Text text="{reportData>iCard}"/>
							</table:template>
						</table:Column>
					
						<table:Column sortProperty="iVersion" filterProperty="iVersion">
							<Label text="Версия"/>
							<table:template>
								<Text text="{reportData>iVersion}"/>
							</table:template>
						</table:Column>
					
						<table:Column sortProperty="sNameCard" filterProperty="sNameCard">
							<Label text="Бизнес-объект"/>
							<table:template>
								<Text text="{reportData>sNameCard}"/>
							</table:template>
						</table:Column>
					
						<table:Column sortProperty="sNameAttr" filterProperty="sNameAttr" visible="{settings>/visible}" >
							<Label text="Атрибут"/>
							<table:template>
								<Text text="{reportData>sNameAttr}"/>
							</table:template>
						</table:Column>
					</table:columns>
				</table:Table>
			</Page>
		</detailPages>
	</SplitApp>
</mvc:View>
