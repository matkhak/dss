<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
    <Dialog width="600px" height="600px" afterClose="onClose" title="Создание нового объекта">
        <content>
            <l:VerticalLayout class="sapUiSmallMargin">
                <RadioButtonGroup id="radioBtnGroup" select="selectTypeCreation" class="sapUiMediumMarginBottom">
                    <buttons>
                        <RadioButton id="new" text="Пустой бланк"/>
                        <RadioButton id="verion" text="Новая версия"/>
                        <RadioButton id="template" text="Создать на основе"/>
                    </buttons>
                </RadioButtonGroup>
                <Input
                    id="sBO"
                    width="500px"
                    visible="false"
                    type="Text"
                    placeholder="Выберите объект"
                    showSuggestion="true"
                    showValueHelp="true"
                    editable="true"
                    enabled="true"
                    valueHelpOnly="true"
                    valueHelpRequest="_openHelpRequest">
                </Input>
            </l:VerticalLayout>
        </content>
        <buttons>
            <Button text="Создать" press="onCreateNewObject"/>
            <Button text="Закрыть" press="onClose"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
